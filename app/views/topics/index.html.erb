<div class="topic-index-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h1>Topic 一覧</h1>
        <ul>
          <% @topics.each do |topic|  %>
            <div class="row">
              <div class="topic-index-single">
                <li><%= link_to topic.title, topic_path(topic) %></li>
              </div>
            </div>
          <% end %>
        </ul>
        <%= link_to "投稿", new_topic_path, class: "btn btn-primary" %>
        <%= paginate @topics %>
      </div>
      <% if current_user %>
        <div class="col-md-4">
          <div class="form-inline pull-right" style="margin-bottom:10px;">
            <%= search_form_for @q do |f| %>
              <div class="form-group">
                <%= f.search_field :title_or_description_or_content_cont, placeholder: "タイトルか本文を検索", class: "form-control" %>
                <%= f.submit "検索", class: "btn btn-primary" %>
              </div>
             <% end %>
          </div>
          <br>
          <div class="thumbnail">
            <div class="caption">
              <h3>Name：<%= @user.name %></h3>
            </div>
          </div>
          <% if @user.topics %>
            <div class="list-group">
                <% @new_topics.each do |topic| %>
                  <%= link_to topic.title, topic, class: "list-group-item" %>
                <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
